<document>
    <stackTemplate>
        <banner>
            <title>Živé vysílání</title>
        </banner>
        <collectionList>
            <grid>
                <section>
                    {{#each channels }}
                                <lockup data-href-page="play" data-href-page-options="{{toJSON this }}">
                                    <img class="darkImage" src="{{ thumb }}" style="width:544; height:306;"/>
                                    <overlay>
                                        <badge src="{{{asset_url channelLogo}}}" style="width:90; height:54; tv-position: top; background:rgba(0,0,0,0.2)" />
                                        <title class="showAndScrollTextOnHighlight">{{ epg.localTitle }}</title>
                                        <!-- <text class="overlayTextLayout">{{live.programme.channelTitle}}</text> -->
                                        <progressBar value="0.{{progress}}" style="tv-tint-color2x: black; tv-tint-color: {{tintColor}}"/>
                                    </overlay>
                                </lockup>
                    {{/each}}
                </section>
            </grid>
        </collectionList>
    </stackTemplate>
</document>
